@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    //ViewData["ActivePage"] = ManageNavPages.Index;
}


<!-- ======= Our Team Section ======= -->
    <div class="container">
        <div class="title-page text-white text-center mt-4" data-aos="fade-up">
            <h2><strong>@ViewData["Title"]</strong></h2>
        </div>
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div class="row">
                <div data-aos="fade-up">
                    <div class="item">
                        <partial name="_StatusMessage" model="Model.StatusMessage" />

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Input.ProfilePic" class="w-100"></label>
                                @if (Model.Input.ProfilePic != null)
                                {
                                    <img id="profilePicture" alt="profile" class="Profile_Pic" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePic))" />
                                }
                                else
                                {
                                    <img id="profilePicture" alt="profile" class="Profile_Pic" src="~/img/Default_Photo.png" />
                                }
                                <div class="custom-file mt-2">
                                    <input type="file"
                                           accept="image/*"
                                           asp-for="Input.ProfilePic"
                                           class="custom-file-input"
                                           onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                                    <label class="custom-file-label" asp-for="Input.ProfilePic">Choose picture...</label>
                                    <span asp-validation-for="Input.ProfilePic" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.FirstName"></label>
                                <input asp-for="Input.FirstName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.LastName"></label>
                                <input asp-for="Input.LastName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" class="form-control" disabled />
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.PhoneNumber"></label>
                                <input asp-for="Input.PhoneNumber" class="form-control" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                            <button id="update-profile-button" type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div>
                </div>
            </div>
            </form>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}