@model AvaMina.ViewModels.PersonReportViewModel

@{
    ViewData["Title"] = "DeleteReport";
}
<!-- ======= Our Team Section ======= -->
<section id="team" class="team section-bg">
    <div class="container">

        <div class="title-page text-white text-center mt-4" data-aos="fade-up">
            <h2><strong>DeleteReport</strong></h2>
            <h4>Are you sure you want to delete this Report ?</h4>
        </div>
        <div class="row">
            <div class="member" data-aos="fade-up">
                <div class="item" style="direction:rtl">
                    <div class="card" style="direction:rtl;text-align:right">
                        <h3 class="card-header text-center">
                            @Html.DisplayFor(model => model.FirstName)
                            @Html.DisplayFor(model => model.SecondName)
                        </h3>
                        <div class="card-body">
                            <h3 class="card-title">وظيفة الاب</h3>
                            <p class="card-text details-text fs-4">
                                @Html.DisplayFor(model => model.FatherJob)
                            </p>
                            <h3 class="card-title"> وظيفة الام </h3>
                            <p class="card-text details-text fs-4">@Html.DisplayFor(model => model.MotherJob)</p>

                            <h3 class="card-title"> الحالة المادية </h3>
                            <p class="card-text details-text fs-4">@Html.DisplayFor(model => model.FinancialLevel)</p>

                            <h3 class="card-title"> أب الاعتراف </h3>
                            <p class="card-text details-text fs-4">@Html.DisplayFor(model => model.FatherOfConfession)</p>

                            <h4 class="card-title">عدد الاخوات </h4>
                            <p class="card-text details-text fs-4">@Html.DisplayFor(model => model.NumberOfBrothers)</p>

                            <h4 class="card-title">الحضور</h4>
                            <p class="card-text details-text fs-4">@Html.DisplayFor(model => model.Attendance)</p>

                            <h4 class="card-title">الهوايات </h4>
                            <p class="card-text details-text fs-4">@Html.DisplayFor(model => model.Hobbies)</p>

                            <h4 class="card-title"> تقرير الخادم </h4>
                            <p class="card-text details-text fs-4">@Html.DisplayFor(model => model.Reports)</p>
                        </div>
                        <div class="card-footer mt-2">
                            <form asp-controller="Report" asp-action="DeleteReport" method="post">
                                <input type="hidden" asp-for="Id" />
                                <a asp-controller="People" asp-action="People" class="btn btn-outline-success text-right">Back to List</a>
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Our Team Section -->
